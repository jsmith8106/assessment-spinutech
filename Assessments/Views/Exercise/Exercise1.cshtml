@model Assessments.Models.AmountModel
@{
    ViewData["Title"] = "Exercise 1";
}

<h1>Exercise 1</h1>
<h2>Number Converter</h2>

<form asp-action="Convert" method="post">
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Convert" class="btn btn-primary" />
    </div>
</form>

@if (Model != null && !string.IsNullOrEmpty(Model.AmountInWords))
{
    <div class="alert alert-info">
        <strong>Result:</strong> @Model.AmountInWords
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}