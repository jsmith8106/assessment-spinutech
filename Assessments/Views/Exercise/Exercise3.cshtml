@{
    ViewData["Title"] = "Exercise 3";
    var matrix = ViewBag.Matrix as int[,];
}

<h1>Exercise 3</h1>
<h2>Spiral Matrix Generator</h2>

<form asp-action="Generate" method="post">
    <div class="form-group">
        <label for="number" class="control-label">Enter a number:</label>
        <input type="number" id="number" name="number" required class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Generate" class="btn btn-primary" />
    </div>
</form>

@if (ViewBag.Matrix != null)
{
    <h2>Spiral Matrix:</h2>
    <table border="1">
        @for (int i = 0; i < matrix.GetLength(0); i++)
        {
            <tr>
                @for (int j = 0; j < matrix.GetLength(1); j++)
                {
                    <td>@matrix[i, j]</td>
                }
            </tr>
        }
    </table>
}

<style>
    table {
    border-collapse: collapse;
    margin-top: 20px;
}

td {
    padding: 10px;
    text-align: center;
    width: 40px;
    height: 40px;
}
</style>